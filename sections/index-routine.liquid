<section class="routine padding-main">
  <div class="container">
    <div class="heading">
      <h2> {{ section.settings.heading }} </h2>
      <p> {{ section.settings.text }} </p>      
      {% if section.settings.button_text != blank %}
        <div class="primary-btn">
          <a href="{{ section.settings.button_url | default: '#'  }}" title="{{ section.settings.button_text }}"> {{ section.settings.button_text_1 }} </a>
        </div>      
      {% endif %}
    </div>
    <div class="inner-routine">
      <div class="owl-carousel routine-slider owl-theme">
        <div class="item">
          <div class="routine-inner">
            <div class="routine-imgs">
              <img src="images/routine-img.png">
            </div>
            <div class="routine-content">
              <h3>Susie’s Plan
              </h3>
              <span>Nurse</span>
              <p>Susie works long hours, does yoga to decompress, and needs help unwinding after a 12 hour shift.
              </p>
              <div class="list-routine">
                <ul>
                  <li><img src="images/icon1.png">Alert Capsules
                  </li>
                  <li><img src="images/icon2.png">Harmoni Gummies
                  </li>
                  <li><img src="images/icon2.png">Sleepi Gummies
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="item">
          <div class="routine-inner">
            <div class="routine-imgs">
              <img src="images/routine-img.png">
            </div>
            <div class="routine-content">
              <h3>Susie’s Plan
              </h3>
              <span>Nurse</span>
              <p>Susie works long hours, does yoga to decompress, and needs help unwinding after a 12 hour shift.
              </p>
              <div class="list-routine">
                <ul>
                  <li><img src="images/icon1.png">Alert Capsules
                  </li>
                  <li><img src="images/icon2.png">Harmoni Gummies
                  </li>
                  <li><img src="images/icon2.png">Sleepi Gummies
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

