<section class="partner padding-main" style="background-color: {{ section.settings.background_color }}">
  <div class="container">
    <div class="partner-ctm-slider">
      {% for block in section.blocks %}        
        <div class="partner-width">
          {% render 'image-card', image: block.settings.image, lazy_load: true %}
          <p> {{ block.settings.text }} </p>
        </div>
      {% endfor %}
    </div>
  </div>

</section>

{% schema %}
  {
    "name": "Partners",
    "blocks": [
        {
            "name": "Slide",
            "type": "Slide",
            "settings": [              
                {
                    "type": "color",
                    "id": "background_color",
                    "label": "Background Color",
                    "default": "#EFF7F6"
                },
                {
                    "type": "textarea",
                    "id": "text",
                    "label": "Text" 
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
        }
      ],
    "presets": [
      {
        "name": "Partners"
      }
    ]
  }
{% endschema %}