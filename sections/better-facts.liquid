<section class="for-you padding-main" id="new1">
    <div class="container">
        <div class="global-heading">
            <h2> {{ section.settings.heading }} </h2>
        </div>
        <div class="for-flex">
            {% for block in section.blocks %}
                {% if block.settings.value != blank %}                    
                    <div class="for-width">
                        <h4> {{ block.settings.value }} </h4>
                        <p> {{ block.settings.text }} </p>
                    </div>
                {% endif %}                
            {% endfor %}            
        </div>
        {% if section.settings.bottom_text != blank %}            
        <div class="best-heading">
            <h3> {{ section.settings.bottom_text }} </h3>
        </div>
        {% endif %}

        {% if section.settings.button_text != blank %}            
        <div class="primary-btn">
            <a href="{{ section.settings.button_link }}" title="{{ section.settings.button_text }}"> {{ section.settings.button_text }} </a>
        </div>
    {% endif %}
    </div>
</section>

{% schema %}
    {
        "name": "Facts",
        "settings": [    
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Youâ€™re Getting Verrry Sleepi"
            },        
            {
                "type": "textarea",
                "id": "bottom_text",
                "label": "Text"
            },        
            {
                "type": "text",
                "id": "button_text",
                "label": "Button Text",
                "default": "start snoozing"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "Button Link"
            }
        ],
        "blocks": [
            {
                "name": "Item",
                "type": "item",
                "settings": [
                    {
                        "type": "text",
                        "id": "value",
                        "label": "Value"
                    },
                    {
                        "type": "text",
                        "id": "text",
                        "label": "Text"
                    }
                ]
            }
        ]
    }
{% endschema %}