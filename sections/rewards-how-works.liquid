<section class="howItworks">
    <div class="container">        
        {% if section.settings.heading != blank %}
                <h2> {{ section.settings.heading }} </h2>                
        {% endif %}
        <ul>  
            {% for block in section.blocks %}    
                {% if block.settings.heading != blank %}                    
                    <li>
                        <span>
                            {%  liquid 
                                if forloop.index < 10
                                  echo forloop.index | prepend: '0' 
                                else
                                  echo forloop.index
                                endif
                            %} 
                        </span>
                        <h3>{{ block.settings.heading }}</h3>
                        <p>
                            {{ block.settings.text }}
                        </p>
                    </li>
                {% endif %}                 
            {% endfor %}              
        </ul>
    </div>
</section>

{% schema %}
    {
        "name": "Discounts",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "How it works"
            }
        ],
        "blocks": [
            {
                "type": "Item",
                "name": "Item",
                "limit": 3,
                "settings": [
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading"
                    },
                    {
                        "type": "text",
                        "id": "text",
                        "label": "Text"
                    }
                ]
            }
        ]
    }
{% endschema %}