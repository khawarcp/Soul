<section class="faqs-sec padding-main">
    <div class="container">
        <div class="faqs-tabing">
            <ul class="tabs">
                <li class="tab-link current" data-tab="tab-1">Product</li>
                <li class="tab-link" data-tab="tab-2">Shipping</li>
                <li class="tab-link" data-tab="tab-3">Memberships</li>
                <li class="tab-link" data-tab="tab-4">Orders</li>
                <li class="tab-link" data-tab="tab-5">General</li>
            </ul>
            <div id="tab-1" class="tab-content current">
                {% for block in section.blocks %}
                    {% if block.type == 'product' %}
                        {% if block.settings.quiz != blank %}
                            <div class="faqs">
                                <div class="question">
                                    <h5> {{ block.settings.quiz }} </h5>
                                </div>
                                <div class="answer">
                                    <p> {{ block.settings.answer }} </p>
                                </div>
                            </div>
                       {% endif %}
                    {% endif %}
                {% endfor %}
            </div>
