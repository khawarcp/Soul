<section class="meet-the-founder padding-main">
  <div class="custom-container">

    <div class="meet-flex">
      <div class="inner-meet">
        <h2> {{ section.settings.heading }} </h2>
        <h3> {{ section.settings.subheading }} </h3>
      </div>
      <div class="meet-width">
        <div class="owl-carousel meet-slider owl-theme">
          {% for block in section.blocks %}    
            {% if block.settings.image != blank %}             
          <div class="item">
            {% render 'image-card', image: block.settings.image, lazy_load: true %}
          </div>
        {% endif %}        
      {% endfor %}
        </div>
      </div>
      <div class="meet-width">
        <div class="inner-meet">
          <h2> {{ section.settings.heading }} </h2>
          <h3> {{ section.settings.subheading }} </h3>
          <p> {{ block.settings.text }} </p>
          <div class="two-btns">
            {% if section.settings.button_text_1 != blank %}
            <a class="secondary-btn" href="{{ block.settings.button_url_1 | default: '#'  }}" title="{{ block.settings.button_text }}"> {{ block.settings.button_text_1 }} </a>
            {% endif %}
            {% if section.settings.button_text_2 != blank %}
            <a class="meet-btn" href="{{ block.settings.button_url_2 | default: '#'  }}" title="{{ block.settings.button_text }}"> {{ block.settings.button_text_2 }} </a>
            {% endif %}
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Meet the founder",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading" 
      },{
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "inline_richtext",
        "id": "text",
        "label": "Text" 
      },{
        "type": "header",
        "content": "CTAs"
      },
      {
        "type": "text",
        "id": "button_text_1",
        "label": "Button Text",
        "default": "Learn More"
      },
      {
        "type": "url",
        "id": "button_url_1",
        "label": "Button Link" 
      },
      {
        "type": "text",
        "id": "button_text_2",
        "label": "Button Text",
        "default": "Learn More"
      },
      {
        "type": "url",
        "id": "button_url_2",
        "label": "Button Link" 
      }
    ],
    "blocks": [
      {
        "name": "Item",
        "type": "item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Background Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Meet the founder"
      }
    ]
  }
{% endschema %}