<section class="discount padding-main">
    <div class="container">
        <div class="heading">
            <h2>Redeem For Discounts</h2>
            <p>Redeeming your hard-earned points is easy!<br>
                For one-time purchases, use our in-cart redemption slider.<br>
                For subscription orders, select your discount amount below to redeem.</p>
        </div>
        <div class="refferal-list">
            <ul>
                <li>
                    <div class="number-flex">
                        <div class="round-number">
                            <h3>$5
                                <span>OFF</span>
                            </h3>
                        </div>
                        <div class="points">
                            <h4>50 points</h4>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="number-flex">
                        <div class="round-number">
                            <h3>$10
                                <span>OFF</span>
                            </h3>
                        </div>
                        <div class="points">
                            <h4>100 points</h4>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="number-flex">
                        <div class="round-number">
                            <h3>$25
                                <span>OFF</span>
                            </h3>
                        </div>
                        <div class="points">
                            <h4>250 points</h4>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="number-flex">
                        <div class="round-number">
                            <h3>$50
                                <span>OFF</span>
                            </h3>
                        </div>
                        <div class="points">
                            <h4>500 points</h4>
                        </div>
                    </div>
                </li>
            </ul>
        </div>

        <div class="discount-flex">
            <div class="discount-width">
                <h3>New Order</h3>
                <p>Choose your discount reward in your cart during checkout.</p>
                <div class="primary-btn">
                    <a href="#">Learn More</a>
                </div>
            </div>
            <div class="discount-width">
                <h3>Existing Subscription Orders</h3>
                <p>Click on any redemption option above, copy the code, apply it via the Apply Discount Code link in the Subscription section of your Account</p>
                <div class="primary-btn">
                    <a href="#">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</section>
{% schema %}
{
  "name": "Rewards Discount",
  "settings": [
      {
          "type": "text",
          "label": "Main Heading",
          "id": "main_heading"
      },
      {
          "type": "richtext",
          "label": "Main Text",
          "id": "main_text"
      }
  ],
  "blocks": [
      {
          "type": "text",
          "name": "Point",
          "limit": 4,
          "settings": [
              {
                  "type": "text",
                  "label": "Price",
                  "id": "title"
              },
              {
                  "type": "text",
                  "label": "Points",
                  "id": "points"
              }
          ]
      },
      {
          "type": "card",
          "name": "Card",
          "limit": 2,
          "settings": [
              {
                  "type": "text",
                  "label": "Title",
                  "id": "title"
              },
              {
                  "type": "richtext",
                  "label": "Text",
                  "id": "para-text"
              },
              {
                  "type": "text",
                  "label": "Button Text",
                  "id": "button-text"
              },
              {
                  "type": "text",
                  "label": "Button URL",
                  "id": "button-link"
              }
          ]
      }
  ]
}
{% endschema %}