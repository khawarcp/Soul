<section class="join">
  <div class="join-flex">
    <div class="join-width">
      {% render 'image-card', image: section.settings.image, lazy_load: true %}
    </div>
    <div class="join-width">
      <div class="inne-join">        
        <h3> {{ section.settings.heading }} </h3>
        <p> {{ section.settings.text }} </p>      
        {% if section.settings.button_text != blank %}
          <div class="normal-btn">
            <a href="{{ section.settings.button_url | default: '#' }}" title="{{ section.settings.button_text }}"> <span>{{ section.settings.button_text }} </span></a>
          </div>      
        {% endif %}
        <div class="join-sl">
          <div class="owl-carousel join-slider owl-theme">
            {% for block in section.blocks %}
            <div class="item">
              <div class="join-slider-inner">
                {% render 'image-card', image: block.settings.image, lazy_load: true %}
                <span> {{ block.settings.text | newline_to_br }} </span>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Join Us",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading" 
      },
      {
        "type": "inline_richtext",
        "id": "text",
        "label": "Text" 
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Learn More"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button Link" 
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "name": "Item",
        "type": "item",
        "settings": [
          {
            "type": "textarea",
            "id": "text",
            "label": "Text" 
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Join Us"
      }
    ]
  }
{% endschema %}